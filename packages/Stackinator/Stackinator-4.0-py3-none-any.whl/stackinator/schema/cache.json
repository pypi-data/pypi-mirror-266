{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Schema for Spack Stack cache.yaml",
    "type" : "object",
    "additionalProperties": false,
    "required": ["key", "root"],
    "properties" : {
        "key" : {
            "oneOf": [
                {"type" : "string"},
                {"type" : "null"}
            ],
            "default": null
        },
        "root" : {
            "type": "string"
        }
    }
}


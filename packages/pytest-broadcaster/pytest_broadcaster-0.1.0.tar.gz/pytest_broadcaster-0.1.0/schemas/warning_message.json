{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/warning_message.json",
  "title": "Warning Message",
  "description": "A warning message.",
  "type": "object",
  "required": [
    "event",
    "when",
    "location",
    "message",
    "node_id"
  ],
  "properties": {
    "event": {
      "const": "WarningMessage",
      "description": "The event type. Always 'WarningMessage'."
    },
    "when": {
      "enum": [
        "config",
        "collect",
        "runtest"
      ],
      "description": "When the warning message is emitted."
    },
    "node_id": {
      "type": "string",
      "description": "The node ID of the node where the warning message is emitted."
    },
    "location": {
      "$ref": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/location.json#",
      "description": "The location of the warning message."
    },
    "message": {
      "type": "string",
      "description": "The string content of the warning message."
    },
    "category": {
      "type": "string",
      "description": "The category of the warning message."
    }
  }
}
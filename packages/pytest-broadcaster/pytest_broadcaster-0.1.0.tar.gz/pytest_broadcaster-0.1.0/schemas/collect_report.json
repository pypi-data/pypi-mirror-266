{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/collect_report.json",
  "title": "Collect Report",
  "description": "A report of collected items.",
  "type": "object",
  "required": [
    "event",
    "node_id",
    "items"
  ],
  "properties": {
    "event": {
      "const": "CollectReport",
      "description": "The event type."
    },
    "node_id": {
      "type": "string",
      "description": "The node id of the collector (if any)."
    },
    "items": {
      "type": "array",
      "description": "The collected items.",
      "items": {
        "oneOf": [
          {
            "$ref": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/test_directory.json",
            "description": "A test directory."
          },
          {
            "$ref": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/test_module.json",
            "description": "A test module."
          },
          {
            "$ref": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/test_suite.json",
            "description": "A test suite."
          },
          {
            "$ref": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/test_case.json",
            "description": "A test case."
          }
        ]
      }
    }
  }
}
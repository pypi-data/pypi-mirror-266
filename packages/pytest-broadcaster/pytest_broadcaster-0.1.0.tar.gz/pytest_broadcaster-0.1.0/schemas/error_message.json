{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/error_message.json",
  "title": "Error Message",
  "description": "An error message.",
  "type": "object",
  "required": [
    "event",
    "when",
    "location",
    "exception_type",
    "exception_value",
    "traceback"
  ],
  "properties": {
    "event": {
      "const": "ErrorMessage",
      "description": "The event type."
    },
    "when": {
      "enum": [
        "config",
        "collect",
        "runtest"
      ],
      "description": "When the error message is emitted."
    },
    "location": {
      "$ref": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/location.json",
      "description": "The location of the error."
    },
    "exception_type": {
      "type": "string",
      "description": "The exception type."
    },
    "exception_value": {
      "type": "string",
      "description": "The exception value."
    },
    "traceback": {
      "$ref": "https://raw.githubusercontent.com/charbonnierg/pytest-broadcaster/main/schemas/traceback.json",
      "description": "The traceback of the error."
    }
  }
}